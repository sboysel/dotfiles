{
    "layer": "top", // Waybar in front of windows
    "position": "top",

    // MODULES //

    "modules-left": [
        "river/tags",
        "river/mode",
        "river/window"
    ],
    "modules-center": [
        "clock"
    ],
    "modules-right": [
        "network",
        "pulseaudio",
        "idle_inhibitor",
        "battery",
        "tray"
    ],

    // RIVER WINDOW
    "river/window": {
        "format": "{}",
        "max-length": 50
    },

    // mpris
    "mpris": {
      "player": "ncspot",
      "format": "{status_icon} {title} - {artist}",
      "status-icons": {
        "playing": "󰐊",
        "paused": "",
        "stopped": ""
      },
      "max-length": 100
    },

    // MULLVAD

    "custom/mullvad": {
        "format": "{}",
        "return-type": "json",
        "interval": 1,
        "exec": "$HOME/bin/mullvad-status.sh",
        "exec-if": "pgrep mullvad-daemon",
        "on-click": "$HOME/bin/mullvad-toggle.sh",
        "tooltip": true
    },

    // NETWORK

    "network": {
        "format-wifi": " ",
        "tooltip-format-wifi": "ssid\t{essid} \ninterf\t{ifname} \nip\t{ipaddr} \ngateway\t{gwaddr} \nsignal\t{signalStrength} ({signaldBm} dBm) \nfreq \t{frequency} Ghz \n {bandwidthUpBits} mbps //  {bandwidthDownBits} mbps",
        "format-ethernet": " ",
        "tooltip-format-ethernet": "{ifname}\t{ipaddr}/{cidr} \ngateway\t{gwaddr} \n {bandwidthUpBits} mbps //  {bandwidthDownBits} mbps",
        "format-disconnected": "⚠"
    },

    // VOLUME

    "pulseaudio": {
        "scroll-step": 5,
        "format": "{icon}",
        "tooltip-format": "volume\t{volume}% \ndesc\t{desc}",
        "format-muted": "",
        "format-icons": {
            "default": ["", ""]
        },
        "on-click": "pavucontrol"
    },

    // BATTERY

    "battery": {
        "bat": "BAT0",
        "adapter": "AC",
        "interval": 5,
        "states": {
            "full": 100,
            "normal": 99,
            "warning": 30,
            "critical": 15
        },
        "format": "󰁹",
        "format-full": "󰚥󰁹",
        "tooltip-format-full": "Battery full",
        "format-discharging": "{icon}",
        "tooltip-format-discharging": "Discharging\t{capacity}% \nTime\t\t{time}",
        "format-charging": "󰚥{icon}",
        "tooltip-format-charging": "Charging\t{capacity}% \nTime\t\t{time}",
        "format-icons": {
          "discharging": ["󰁺", "󰁻", "󰁼", "󰁽", "󰁾", "󰁿", "󰂀", "󰂁", "󰂂", "󰁹"],
          "charging": ["󰢜", "󰂆", "󰂇", "󰂈", "󰢝", "󰂉", "󰢞", "󰂊", "󰂋", "󰂅"]
        },
        "full-at": 100
    },

    // POMO

    "custom/pomo": {
        "format": "  {}",
        "interval": 1,
        "exec": "pomo status",
        "exec-if": "pgrep pomo"
    },

    // SYSTEM TRAY

    "tray": {
        "spacing": 10
    },

    // IDLE INHIBITOR
    "idle_inhibitor": {
        "start-activated": true,
        "format": "{icon}",
        "format-icons": {
            "activated": "",
            "deactivated": ""
        }
    },

    // CLOCK

    "clock": {
        "format": "{:%H:%M}",
        "tooltip-format": "<big>{:%Y %B %d}</big>\n<small>{calendar}</small>",
        "on-click": "google-chrome-stable 'https://www.google.com/calendar'"

    },

}

