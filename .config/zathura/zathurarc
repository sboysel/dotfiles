# set font "FiraCode Nerd Font 16"
set font "JetBrainsMono Nerd Font Mono 12"

# Open document in fit-width mode by default
set adjust-open "width"

# One page per row by default
set pages-per-row 1

# Fix dual page view
set first-page-column 2:3

#stop at page boundries
set scroll-page-aware "true"
set scroll-full-overlap 0.01
set scroll-step 100

#zoom settings
set zoom-min 10

# hide status bar
map b toggle_statusbar

# presentation mode
# map presentation Left 

# clipboard
set selection-clipboard clipboard

# disable sandbox
set sandbox none

# kanagawa
# #223249
set notification-error-bg       "#223249"
set notification-error-fg       "#FF5D62"
set notification-warning-bg     "#223249"
set notification-warning-fg     "#FFA066"
set notification-bg             "#223249"
set notification-fg             "#DCD7BA"

set completion-bg               "#223249"
set completion-fg               "#C8C093"
set completion-group-bg         "#2A2A37"
set completion-group-fg         "#C8C093"
set completion-highlight-bg     "#957FB8"
set completion-highlight-fg     "#223249"

set index-bg                    "#223249"
set index-fg                    "#957FB8"
set index-active-bg             "#957FB8"
set index-active-fg             "#223249"

set inputbar-bg                 "#223249"
set inputbar-fg                 "#C8C093"

set statusbar-bg                "#223249"
set statusbar-fg                "#C8C093"

set highlight-color             "#FFA066"
set highlight-active-color      "#FF5D62"

set default-bg                  "#223249"
set default-fg                  "#C8C093"
set render-loading              "true"
set render-loading-bg           "#223249"
set render-loading-fg           "#C8C093"

