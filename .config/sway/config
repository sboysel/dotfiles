# Read `man 5 sway` for a complete reference.

#
# Variables
#
set $mod Mod4
set $term kitty
set $web firefox
set $scrot swayshot display
set $menu dmenu_path | dmenu | xargs swaymsg exec --
set $laptop eDP-1
# set $monitor HDMI-A-1
set $monitor HDMI-A-2
set $left h
set $down j
set $up k
set $right l
set $bg ~/.wallpaper/thinkpad/wavy2560x1440.png
set $lock swaylock -f -s center --indicator-radius 250 --indicator-thickness 50 -i $bg
font pango: FiraCode Nerd Font 12

include ~/.config/sway/config.d/*

