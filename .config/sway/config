set $menu dmenu_path | dmenu | xargs swaymsg exec --
set $laptop eDP-1
set $monitor HDMI-A-2
# set $bgimage ~/.wallpaper/thinkpad/vortex-2560x1440.jpg
set $bgimage ~/.wallpaper/thinkpad/patrick-ryan.jpg
set $bgcolor "#16161D"
set $lock swaylock -f -c $bgcolor -s solid_color --indicator-radius 250 --indicator-thickness 50
