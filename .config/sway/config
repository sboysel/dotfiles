# Read `man 5 sway` for a complete reference.

#
# Variables
#
set $mod Mod4
set $term kitty
# set $web chromium
set $web firefox
set $lock ~/bin/swaylock-blur
set $scrot swayshot display
set $menu dmenu_path | dmenu | xargs swaymsg exec --
set $laptop eDP-1
set $monitor HDMI-A-1
set $left h
set $down j
set $up k
set $right l
font pango: FiraCode Nerd Font 8

include ~/.config/sway/config.d/output
include ~/.config/sway/config.d/input
include ~/.config/sway/config.d/startup
include ~/.config/sway/config.d/keybindings
include ~/.config/sway/config.d/navigation
include ~/.config/sway/config.d/workspaces
include ~/.config/sway/config.d/clients
include ~/.config/sway/config.d/layouts
include ~/.config/sway/config.d/scratchpad
include ~/.config/sway/config.d/resize
include ~/.config/sway/config.d/exit_dialog
include ~/.config/sway/config.d/colors
include ~/.config/sway/config.d/status_bar
